// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  imageConsent  Boolean   @default(false) // GDPR: Consent for displaying image
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  auditLogs     AuditLog[] // GDPR logging

  // App-specific relations
  properties     Property[]
  tenants        Tenant[]
  receipts       Receipt[]
  expenses       Expense[]
  maintenanceTickets MaintenanceTicket[]
  leases         Lease[]
  correspondences Correspondence[]
  owners         Owner[]
  propertyOwners PropertyOwner[]
  emailLogs      EmailLog[]
}

model Owner {
  id        String   @id @default(cuid())
  userId    String
  name      String
  email     String   @unique
  phone     String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  properties PropertyOwner[]

  @@map("owners")
}

model PropertyOwner {
  id                  String   @id @default(cuid())
  propertyId          String
  ownerId             String
  ownershipPercentage Float
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  owner    Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([propertyId, ownerId])
  @@map("property_owners")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

model EmailLog {
  id         String   @id @default(cuid())
  userId     String
  to         String
  from       String
  subject    String
  templateId String?
  status     EmailStatus
  messageId  String?
  error      String?
  sentAt     DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_logs")
}

model Property {
  id          String   @id @default(cuid())
  userId      String
  name        String
  address     String
  // Enhanced address fields
  streetAddress   String?
  city           String?
  zipCode        String?
  country        String?  @default("Portugal")
  latitude       Float?
  longitude      Float?
  addressVerified Boolean @default(false)
  // Building grouping
  buildingId     String?
  buildingName   String?

  type        PropertyType
  bedrooms    Int
  bathrooms   Int
  rent        Float
  status      PropertyStatus
  description String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenants     Tenant[]
  receipts    Receipt[]
  owners      PropertyOwner[]
  expenses    Expense[]
  maintenance MaintenanceTicket[]
  leases      Lease[]

  @@map("properties")
}

model Tenant {
  id            String   @id @default(cuid())
  userId        String
  name          String
  email         String   @unique
  phone         String
  propertyId    String?
  rent          Float
  leaseStart    DateTime
  leaseEnd      DateTime
  paymentStatus PaymentStatus @default(pending)
  lastPayment   DateTime?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  property      Property?     @relation(fields: [propertyId], references: [id], onDelete: SetNull)
  receipts      Receipt[]
  correspondence Correspondence[]
  maintenance    MaintenanceTicket[]
  leases        Lease[]

  @@map("tenants")
}

model Receipt {
  id          String   @id @default(cuid())
  userId      String
  tenantId    String
  propertyId  String
  amount      Float
  date        DateTime
  type        ReceiptType
  status      ReceiptStatus @default(paid)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("receipts")
}

model Expense {
  id          String   @id @default(cuid())
  userId      String
  propertyId  String
  amount      Float
  date        DateTime
  category    String
  description String?
  receiptImage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("expenses")
}

model MaintenanceTicket {
  id          String   @id @default(cuid())
  userId      String
  propertyId  String
  tenantId    String?
  title       String
  description String
  status      MaintenanceStatus @default(open)
  priority    MaintenancePriority @default(medium)
  images      String   // JSON string of image URLs
  cost        Float?
  assignedTo  String?
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  tenant   Tenant?  @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  @@map("maintenance_tickets")
}

model CorrespondenceTemplate {
  id        String   @id @default(cuid())
  name      String
  type      TemplateType
  subject   String
  content   String
  variables String   // JSON string of variable names
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  correspondence Correspondence[]

  @@map("correspondence_templates")
}

model Correspondence {
  id         String   @id @default(cuid())
  userId     String
  templateId String
  tenantId   String
  subject    String
  content    String
  status     CorrespondenceStatus @default(draft)
  sentAt     DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user     User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  template CorrespondenceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  tenant   Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("correspondence")
}

model Lease {
  id                  String   @id @default(cuid())
  userId              String
  propertyId          String
  tenantId            String
  startDate           DateTime
  endDate             DateTime
  monthlyRent         Float
  deposit             Float    @default(0)
  contractFile        Bytes?  // Store PDF content as BLOB
  contractFileName    String?
  contractFileSize    Int?
  taxRegime           String? // 'portugal_rendimentos' or 'spain_inmuebles'
  status              LeaseStatus @default(active)
  autoRenew           Boolean  @default(false)
  renewalNoticeDays   Int      @default(60)
  notes               String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("leases")
}

// Enums
enum PropertyType {
  apartment
  house
  condo
  townhouse
  other
}

enum PropertyStatus {
  occupied
  vacant
  maintenance
}

enum PaymentStatus {
  paid
  overdue
  pending
}

enum ReceiptType {
  rent
  deposit
  maintenance
  other
}

enum ReceiptStatus {
  paid
  pending
}

enum TemplateType {
  welcome
  rent_reminder
  eviction_notice
  maintenance_request
  lease_renewal
  custom
}

enum CorrespondenceStatus {
  draft
  sent
  delivered
}

enum UserRole {
  USER
  ADMIN
  MANAGER
}

enum EmailStatus {
  sent
  delivered
  bounced
  failed
}

enum MaintenanceStatus {
  open
  in_progress
  resolved
  closed
}

enum MaintenancePriority {
  low
  medium
  high
  urgent
}

enum LeaseStatus {
  active
  expired
  terminated
  pending
}
